<style>
.page-loader {
  position: fixed;
  display: flex;
  width: 100%;
  height: 100%;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  justify-content: center;
  align-items: center;
  overflow: hidden;
  z-index: 10000;
}
.page-loader__bg-item {
  position: absolute;
  width: 26%;
  top: 0;
  bottom: 0;
  background: #00bfa6;
}
.page-loader__bg-item:nth-child(1) {right: 75%;}
.page-loader__bg-item:nth-child(2) {right: 50%;}
.page-loader__bg-item:nth-child(3) {right: 25%;}
.page-loader__bg-item:nth-child(4) {right: 0;}

.page-loader__content {
  font-size: 0;
  text-align: center;
  letter-spacing: 1.5px;
  z-index: 1;
}
.page-loader__content > span {
  display: inline-block;
  color: #fff;
  font-size: 36px;
  font-weight: bold;
  animation: loadingAnim 3s infinite;
}
.page-loader__content > span:nth-child(2) {animation-delay: .15s}
.page-loader__content > span:nth-child(3) {animation-delay: .3s}
.page-loader__content > span:nth-child(4) {animation-delay: .45s}
.page-loader__content > span:nth-child(5) {animation-delay: .6s}
.page-loader__content > span:nth-child(6) {animation-delay: .75s}
.page-loader__content > span:nth-child(7) {animation-delay: .9s}
@keyframes loadingAnim {
  0% {
    transform: translateY(0);
  }
  15% {
    transform: translateY(-16px);
  }
  40% {
    transform: translateY(1px);
  }
  50% {
    transform: translateY(0);
  }
}
</style>

<script>
setTimeout(() => {
  if (!document.getElementById('js-page-loader')) return;
  document.getElementById('js-page-loader').style.display = 'none';
}, 10000);
</script>
